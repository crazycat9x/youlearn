{
  "manifest_version": 2,

  "name": "You Learn",
  "description": "Making youtube a better learning platform",
  "version": "1.0",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "identity",
    "background"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
      "css": ["style.css"],
      "js": ["jquery.js", "myscript.js"]
    },
    {
      "matches": ["https://www.youtube.com/results?sp=EgIQA1AU&*"],
      "css": ["style.css"],
      "js": ["jquery.js", "fontawesome.js", "myscript2.js"]
    }
  ],
  "web_accessible_resources": [
    "style.css"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/4.3.1/firebase.js https://apis.google.com/js/platform.js; object-src 'self'"
}